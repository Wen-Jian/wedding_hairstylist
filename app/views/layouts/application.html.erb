<!DOCTYPE html>
<html>
  <head>
    <title>WeddingHairstylist</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

	<div class="banner navbar navbar-fixed-top">
		
		<div class="logo"><%= link_to "this is logo", services_path %></div>
    <div class="user-status">
      
      <% if current_user != nil %>

        <div class="user-action btn btn-primary">
          
          <%= link_to '登出', destroy_user_session_path(current_user), method: :delete %>
        </div>

      <% else %> 

        <div class="user-action btn btn-primary">
          <%= link_to "註冊", new_user_registration_path %>
        </div>
        <div class="user-action btn btn-primary">
          <%= link_to "登入", new_user_session_path %>
        </div>

      <% end %>


      
      

    </div>

	</div>

    <%= yield %>
  </body>
</html>
